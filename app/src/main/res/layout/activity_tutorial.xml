<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.senjapagi.BukberRanger.Main.Tutorial">

    <ScrollView
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:src="@drawable/rsz_ic_tutorial"/>

    <LinearLayout
        android:background="@drawable/bg_rounded_filled_stroke"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_height="match_parent"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="#00B0FF"
            android:text="Tutorial Pendaftaran Buka Bersama di MSU"
            android:fontFamily="@font/montserrat_regular"
            android:layout_marginBottom="10dp"
            android:textSize="12pt"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1. Masuk ke Menu Daftar Bukber"
            android:textColor="@android:color/black"
            android:fontFamily="@font/montserrat_thin"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:text="2. Tunggu sampai formulir pendaftaran ditampilkan"
            android:fontFamily="@font/montserrat_thin"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:text="   Formulir tidak ditampilkan pada aplikasi jika :"
            android:fontFamily="@font/montserrat_thin"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:text="-  Pendaftaran buka bersama belum dibuka"
            android:fontFamily="@font/montserrat_thin"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:text="-  Kuota pendaftaran sudah habis baik ikhwan maupun akhwat"
            android:fontFamily="@font/montserrat_thin"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:text="-  Koneksi dengan server terganggu"
            android:fontFamily="@font/montserrat_thin"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:text="3. Isi formulir pendaftaran sesuai dengan data anda"
            android:fontFamily="@font/montserrat_thin"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:text="4. Jika pendaftaran berhasil anda akan dialihkan ke halaman konfirmasi yang menampilkan QR Code pengambilan makanan berat milik anda"
            android:fontFamily="@font/montserrat_thin"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textStyle="italic|bold"
            android:text="@string/catatan_tutorial"
            android:fontFamily="@font/montserrat_thin"/>

    </LinearLayout>

        <LinearLayout
            android:background="@drawable/bg_rounded_filled_stroke"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="#00B0FF"
                android:text="Tata Cara Pengambilan Bukber"
                android:fontFamily="@font/montserrat_regular"
                android:textSize="12pt"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textAlignment="center"
                android:text="Tunjukkan QR Code yang sudah anda screenshot saat mendaftar ke panitia , atau anda bisa juga menampilkan QR Code anda dengan memasukan Username dan Password pada menu Ambil Bukber"
                android:fontFamily="@font/montserrat_thin"/>
        </LinearLayout>
            <LinearLayout
                android:background="@drawable/bg_rounded_filled_stroke"
                android:layout_width="match_parent"
                android:padding="10dp"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="#00B0FF"
                    android:text="Penting"
                    android:fontFamily="@font/montserrat_regular"
                    android:textSize="12pt"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:text="- QR Code hanya dapat digunakan pada kegiatan buka bersama sebanyak satu kali ( Yaitu pada jadwal yang tertulis saat mendaftar )"
                    android:fontFamily="@font/montserrat_thin"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:text="- Peserta yang tidak mengambil makanan berat setelah mendaftar maka akan diblacklist pada kegiatan selanjutnya"
                    android:fontFamily="@font/montserrat_thin"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:text="- Hubungi Panitia saat onsite bila lupa username atau password dan belum menscreenshot QR Code "
                    android:fontFamily="@font/montserrat_thin"/>
            </LinearLayout>
            <LinearLayout
                android:background="@drawable/bg_rounded_filled_stroke"
                android:layout_width="match_parent"
                android:padding="10dp"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textAlignment="center"
                    android:text="Aplikasi ini didukung oleh :"
                    android:fontFamily="@font/montserrat_regular"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textAlignment="center"
                    android:text="Panitia Buka Bersama dan PRK Ramadhan"
                    android:fontFamily="@font/montserrat_regular"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:text="Masjid Syamsul Ulum"
                    android:fontFamily="@font/montserrat_regular"
                    android:textSize="10pt"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                >

            </LinearLayout>
        </LinearLayout>
</ScrollView>

    <Button
        android:id="@+id/btn_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/sp_rectangle_root"
        android:fontFamily="@font/montserrat_thin"
        android:text="Home"
        android:layout_marginBottom="10dp"
        android:textAllCaps="false"
        android:textColor="#fff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>