<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">
        <ImageView
            android:id="@+id/greeting_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/bg_header_daylight"
            android:scaleType="fitXY" />
        <LinearLayout
            android:layout_gravity="top"
            android:padding="10dp"
            android:elevation="3dp"
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_regular"
                android:text="Tentang Aplikasi"
                android:textColor="#ffffff"
                android:textSize="13pt" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_regular"
                android:text="Buka Bersama Jadi Lebih Mudah"
                android:textColor="#fff"
                android:textSize="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_margin="10px"
                >

            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="150dp"
        >
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:layout_gravity="top"
       android:padding="10dp"
       >
       <ImageView
           android:layout_width="match_parent"
           android:layout_height="100dp"
           android:src="@drawable/rsz_about_this_app"/>
       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="About Bukber Ranger"
           android:textColor="#00B0FF"
           android:fontFamily="@font/montserrat_regular"
           android:textAlignment="center"
           android:textSize="12pt"/>
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Bukber Ranger adalah Aplikasi Sistem Informasi pengelolaan data dan informasi Kegiatan Buka Bersama Masjid Syamsul Ulum, Memudahkan pendataan peserta buka bersama , pengaturan jadwal dan kuota serta meningkatkan efisiensi/kecepatan antrian pengambilan makanan Buka Bersama dengan penggunaan Quick Response Code ( QR CODE )"
               android:textColor="#000"
               android:fontFamily="@font/montserrat_thin"
               android:textAlignment="center"
               android:padding="10dp"
               android:layout_marginTop="10dp"
               android:background="@drawable/bg_rounded_filled_stroke"/>
      <View
          android:layout_marginTop="10dp"
          android:layout_width="match_parent"
          android:layout_height="0.5dp"
          android:background="#0f0f0f"
          android:padding="10dp"/>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="10dp"
           android:orientation="vertical"
           >
           <ImageView
               android:layout_width="match_parent"
               android:layout_height="100dp"
               android:src="@drawable/about_dev"/>
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="About This App Development"
               android:textColor="#00B0FF"
               android:fontFamily="@font/montserrat_regular"
               android:textAlignment="center"
               android:textSize="11pt"/>

           <LinearLayout
               android:padding="10dp"
               android:layout_marginTop="10dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:background="@drawable/bg_rounded_filled_stroke"
               >
                       <TextView
                           android:layout_weight="1"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:fontFamily="@font/montserrat_thin"
                           android:textAlignment="textStart"
                           android:textColor="@android:color/black"
                           android:text="1. Front End and Back End\n(Henry Augusta - Sistem Informasi 2018)"/>
                       <TextView
                           android:layout_weight="1"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:fontFamily="@font/montserrat_thin"
                           android:textAlignment="textStart"
                           android:textColor="@android:color/black"
                           android:text="2.UI and User Experience\n(Muhammad Firriezky)"/>
                   <TextView
                       android:layout_marginLeft="5dp"
                       android:layout_weight="1"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:fontFamily="@font/montserrat_regular"
                       android:textAlignment="center"
                       android:textColor="@android:color/black"
                       android:text="On Behalf of senjapagitech.id "/>
                   <TextView
                       android:layout_marginLeft="5dp"
                       android:layout_weight="1"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:textAlignment="center"
                       android:fontFamily="@font/montserrat_thin"
                       android:textSize="6pt"
                       android:text="Need App for your Organization/Company ?\nKindly email us at senjapagi.tech@gmail.com"/>
           </LinearLayout>
           <LinearLayout
               android:padding="10dp"
               android:layout_marginTop="10dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:background="@drawable/bg_rounded_filled_stroke"
               >
               <TextView
                   android:layout_weight="1"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:fontFamily="@font/montserrat_thin"
                   android:textAlignment="textStart"
                   android:textColor="@android:color/black"
                   android:textStyle="bold"
                   android:text="Library Used :"/>
               <TextView
                   android:layout_weight="1"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:fontFamily="@font/montserrat_thin"
                   android:textAlignment="textStart"
                   android:textColor="@android:color/black"
                   android:text="1. Fast Android Networking by Amit Shekhar\n2. Retrofit by Square\n3. Sweet Alert Dialog by Tristan Edward"/>

           </LinearLayout>
       </LinearLayout>
   </LinearLayout>

    </ScrollView>

</RelativeLayout>