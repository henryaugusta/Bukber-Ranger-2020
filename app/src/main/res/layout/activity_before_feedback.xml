<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.senjapagi.BukberRanger.Main.Peserta.BeforeFeedback"
    android:padding="10dp"
    android:gravity="center"
    android:orientation="vertical"
    android:background="#fff">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/ic_mail"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_regular"
        android:text="Silakan Pilih Tujuan Feedback Yang Akan Diberikan :"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="10pt"
        />

    <Button
        android:id="@+id/btn_kegiatan_bukber"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/blue_button_background"
        android:text="Kegiatan Buka Bersama"
        />

    <Button
        android:id="@+id/btn_feedback_aplikasi"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/blue_button_background"
        android:text="Aplikasi Bukber Ranger"
        />



</LinearLayout>