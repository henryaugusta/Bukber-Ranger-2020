<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:spinnerItemStyle">@style/mySpinnerItemStyle</item>



    </style>
    <style name="TextViewStyle1">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="TextViewStyle2">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <style name="TextViewStyleInfoBukber">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="TextViewStyleDashboardItem">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="hintColor">
        <item name="android:textColorHint">#5e5e5e</item>
    </style>

    <style name="mySpinnerItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@color/float_transparent</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
